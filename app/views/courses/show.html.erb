<div class="row">
	<div class="small-6 large-5 columns">	
		<p id="notice"><%= notice %></p>

		<p>
		  <strong>Name:</strong>
		  <%= @course.name %>
		</p>
		<p>
		  <strong>Description:</strong>
		  <%= @course.description %>
		</p>
		<% if user_signed_in? %>
			<%= link_to 'Edit', edit_course_path(@course) %> |
		<% end %>
		<%= link_to 'Back', courses_path %>
	</div>
</div>
